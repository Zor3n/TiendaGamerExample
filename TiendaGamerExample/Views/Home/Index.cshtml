@{
    ViewData["Title"] = "Home Page";
}

<div class="px-5 pb-5 pt-2 bg-dark">
    <div id="carouselExampleIndicators" class="carousel slide text-center" data-bs-ride="true">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" style="text-align: -webkit-center;">
            <div class="carousel-item active">
                <img src="https://picsum.photos/id/1011/1200/500" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/id/900/1200/500" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://picsum.photos/id/901/1200/500" class="d-block" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="container text-center">

    <div class="my-5 fs-1 text-decoration-underline main-logo">NUESTROS PRODUCTOS</div>

    <div class="card m-auto mb-5" style="width: 1200px;">
        <div class="row g-0">
            <div class="col-md-4">
                <a href="#">
                    <img src="~/imgs/combos.jpg" class="img-fluid rounded-start" alt="..." >
                </a>
            </div>
            <div class="col-md-8 d-flex align-items-end text-start">
                <div class="card-body">
                    <h5 class="card-title fs-1"><b>Combos</b></h5>
                    <p class="card-text fs-5 mb-5">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <button type="button" class="btn btn-dark py-3 px-5 fs-5 text-uppercase">Ver combos</button>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-5 mb-5">
        <div class="col">
            <div class="row mb-5">
                <div class="col">
                    <a href="#" class="text-decoration-none">
                        <div class="card" style="width: 18rem;">
                            <img src="~/imgs/pc_gamers.jpg" class="card-img-top" alt="PC gamers" style="height: 22rem;">
                            <div class="card-body">
                                <p class="card-text fs-5 text-dark text-uppercase">PC Gamers</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="#" class="text-decoration-none">
                        <div class="card" style="width: 18rem;">
                            <img src="~/imgs/sillas.png" class="card-img-top" alt="Sillas" style="height: 22rem;">
                            <div class="card-body">
                                <p class="card-text fs-5 text-dark text-uppercase">Sillas</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="#" class="text-decoration-none">
                        <div class="card" style="width: 18rem;">
                            <img src="~/imgs/accesorios.jpg" class="card-img-top" alt="Accesorios" style="height: 22rem;">
                            <div class="card-body">
                                <p class="card-text fs-5 text-dark text-uppercase">Accesorios</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a href="#" class="text-decoration-none">
                        <div class="card" style="width: 18rem;">
                            <img src="~/imgs/streaming.png" class="card-img-top" alt="Streaming" style="height: 22rem;">
                            <div class="card-body">
                                <p class="card-text fs-5 text-dark text-uppercase">Streaming</p>
                            </div>
                        </div>
